@model Entities.Card

    @{
        ViewData["Title"] = "Edit";
    }

    <h1>Edit</h1>

    <h4>Card</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                @Html.HiddenFor(p => p.Id)
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
